{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Trips overview</h1>
        <a href="{{ path('trip_new') }}" class="btn btn-success">Create new trip</a>
        <hr/>
        <div class="row">
            {% for entity in entities %}
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <a href="{{ path('trip_place', { 'tripId': entity.id }) }}" class="thumbnail"><img src="/{{ entity.webPath }}"></a>
                        <div class="caption">
                            <h3>{{ entity.title }}</h3>
                            <p>{{ entity.title }}</p>
                            <p>
                                <a href="{{ path('trip_edit', { 'id': entity.id }) }}" class="btn btn-primary" role="button">Edit</a>
                                <a href="{{ path('trip_place', { 'tripId': entity.id }) }}" class="btn btn-default" role="button">Show</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
        <hr/>
    </div>
{% endblock %}
